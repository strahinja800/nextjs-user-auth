datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  sessions Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id])
}

model Training {
  id          String @id @default(cuid())
  title       String
  image       String
  description String
}
